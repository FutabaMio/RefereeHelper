<Window x:Class="RefereeHelper.OptionsWindows.ManualAddDistances"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RefereeHelper.OptionsWindows"
        mc:Ignorable="d"
        Title="ManualAddDistances" Height="450" Width="800" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="109*"/>
            <RowDefinition Height="109*"/>
            <RowDefinition Height="176*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Название дистанции" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" FontSize="16" Grid.ColumnSpan="2" Margin="0,0,266,109" Grid.RowSpan="2"/>
        <TextBox Name="distanceNameTextBox" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="30"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Длина, метров" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" FontSize="16" Grid.ColumnSpan="2" Margin="0,0,266,163" Grid.RowSpan="2"/>
        <TextBox Name="lengthNameTextBox" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Height="30" Grid.ColumnSpan="2" Margin="0,0,266,0"/>
        <Label Grid.Column="0" Grid.Row="2" Content="Набор высоты, метров" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" FontSize="16" Grid.ColumnSpan="2" Margin="0,0,266,0"/>
        <TextBox Name="heightNameTextBox" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Height="30" Grid.ColumnSpan="2" Margin="0,0,266,0"/>
        <Button Grid.Column="1" Grid.Row="3" Content="OK"/>
        <Button Grid.Column="2" Grid.Row="3" Content="Отмена" Click="Button_Click"/>
    </Grid>
</Window>
