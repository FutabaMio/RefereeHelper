<Window x:Class="RefereeHelper.OptionsWindows.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RefereeHelper.OptionsWindows"
        mc:Ignorable="d"
        Title="MessageWindow" Height="150" Width="300">
    <Grid>
        <TextBlock x:Name ="Message" Text="Сообщение" VerticalAlignment="Top" Margin="10,10,10,0" TextWrapping="Wrap" Height="80"/>
        <Button x:Name="button" Content="ОК" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="60" Click="button_Click"/>
    </Grid>
</Window>
