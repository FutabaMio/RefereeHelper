<UserControl x:Class="RefereeHelper.Views.ComandsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RefereeHelper.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="194*">
            </RowDefinition>
            <RowDefinition Height="215*">
            </RowDefinition>
            <RowDefinition Height="37*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Команды" FontSize="24" FontWeight="Bold"/>
        <TextBlock Grid.Row="1" Text="Участники команды" FontSize="24" FontWeight="Bold"/>
        <Button Grid.Row="2" Margin="10,2,679,2" Content="Добавить команду" FontSize="10" Click="Button_Click"/>
        <Button Grid.Row="2" Margin="126,2,557,2" Content="Редактировать" FontSize="10"/>
        <Button Grid.Row="2" Margin="249,2,434,2" Content="Удалить" FontSize="10"/>
        <Button Grid.Row="2" Margin="371,2,312,2" Content="Добавить вручную" FontSize="10" Click="Button_Click_1"/>
        <Button Grid.Row="2" Margin="493,2,190,2" Content="Добавить из базы" FontSize="10" Click="Button_Click_2"/>
        <Button Grid.Row="2" Margin="673,2,10,2" Content="Удалить" FontSize="10"/>
        <DataGrid Grid.Row="0" Margin="0,34,0,0"  Name="commandsDataGrid"/>
        <DataGrid Grid.Row="1" Margin="0,34,0,0"  Name="membersDataGrid"/>
    </Grid>
</UserControl>
