<UserControl x:Class="RefereeHelper.Views.EventsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RefereeHelper.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="194*"></RowDefinition>
            <RowDefinition Height="215*"></RowDefinition>
            <RowDefinition Height="37*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Соревнования" FontSize="24" FontWeight="Bold"/>
        <TextBlock Grid.Row="1" Text="Участвующие группы" FontSize="24" FontWeight="Bold"/>
        <Button Grid.Row="2" Margin="10,2,660,2" Content="Добавить соревнование" FontSize="10" Click="Button_Click"/>
        <Button Grid.Row="2" Margin="145,2,538,2" Content="Редактировать" FontSize="10"/>
        <Button Grid.Row="2" Margin="267,2,416,2" Content="Удалить" FontSize="10"/>

        <DataGrid Grid.Row="0" Margin="0,35,0,0" Name="eventsTable"/>
    </Grid>
</UserControl>
