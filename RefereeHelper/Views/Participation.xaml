<UserControl x:Class="RefereeHelper.Views.Participation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RefereeHelper.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="367*"/>
            <RowDefinition Height="48*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Name="manualAddParticipation" Content="Добавить вручную" FontSize="20" Click="manualAddStart_Click"/>
            <!--Не уверен, что кнопки вообще нужны - добавить по ПКМ, изменить по двойному клику(?)-->
        </Grid>
        <Label Grid.Row="0" Content="Участие (вспомогательная таблица)" FontSize="20"/>
        <DataGrid Grid.Row="1" Name="participationTable" ItemsSource="{Binding}"/>
    </Grid>
</UserControl>
